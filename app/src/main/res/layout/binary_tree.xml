<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/s_node1"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@color/colorAccent"
            android:visibility="invisible"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <com.yuzgulen.laera.ui.exercise.categories.commons.CanvasView
            android:id="@+id/s_edge1"
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <com.yuzgulen.laera.ui.exercise.categories.commons.CanvasView
            android:id="@+id/s_edge2"
            android:layout_width="match_parent"
            android:layout_height="20dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/s_node2"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@color/colorAccent"
            android:visibility="invisible"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/s_placeholder1"
            android:visibility="invisible"
            style="@style/Widget.MaterialComponents.Button"
            android:textColor="@android:color/white"
            android:background="@color/colorAccent"
            android:textSize="18sp"
            android:layout_width="140dp"
            android:layout_height="54dp" />

        <Button
            android:id="@+id/s_node3"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@color/colorAccent"
            android:visibility="invisible"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="4">

        <com.yuzgulen.laera.ui.exercise.categories.commons.CanvasView
            android:id="@+id/s_edge3"
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <com.yuzgulen.laera.ui.exercise.categories.commons.CanvasView
            android:id="@+id/s_edge4"
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <com.yuzgulen.laera.ui.exercise.categories.commons.CanvasView
            android:id="@+id/s_edge5"
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <com.yuzgulen.laera.ui.exercise.categories.commons.CanvasView
            android:id="@+id/s_edge6"
            android:layout_width="match_parent"
            android:layout_height="20dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/s_node4"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@color/colorAccent"
            android:visibility="invisible"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/s_placeholder2"
            android:visibility="invisible"
            style="@style/Widget.MaterialComponents.Button"
            android:textColor="@android:color/white"
            android:background="@color/colorAccent"
            android:textSize="18sp"
            android:layout_width="40dp"
            android:layout_height="54dp" />

        <Button
            android:id="@+id/s_node5"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@color/colorAccent"
            android:visibility="invisible"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/s_placeholder3"
            android:visibility="invisible"
            style="@style/Widget.MaterialComponents.Button"
            android:textColor="@android:color/white"
            android:background="@color/colorAccent"
            android:textSize="18sp"
            android:layout_width="40dp"
            android:layout_height="54dp" />

        <Button
            android:id="@+id/s_node6"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@color/colorAccent"
            android:visibility="invisible"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/s_placeholder4"
            android:visibility="invisible"
            style="@style/Widget.MaterialComponents.Button"
            android:textColor="@android:color/white"
            android:background="@color/colorAccent"
            android:textSize="18sp"
            android:layout_width="40dp"
            android:layout_height="54dp" />

        <Button
            android:id="@+id/s_node7"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@color/colorAccent"
            android:visibility="invisible"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>