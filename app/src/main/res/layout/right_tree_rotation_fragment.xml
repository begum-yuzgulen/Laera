<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/first_layout"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">


    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textAlignment="viewEnd"
        android:id="@+id/refreshTree"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/ic_renew" />

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/startingLayout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/s_node1"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@color/colorAccent"
                android:visibility="invisible"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.yuzgulen.laera.ui.exercise.CanvasView
                android:id="@+id/s_edge1"
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <com.yuzgulen.laera.ui.exercise.CanvasView
                android:id="@+id/s_edge2"
                android:layout_width="match_parent"
                android:layout_height="20dp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/s_node2"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@color/colorAccent"
                android:visibility="invisible"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/s_placeholder1"
                android:visibility="invisible"
                style="@style/Widget.MaterialComponents.Button"
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                android:textSize="20sp"
                android:layout_width="140dp"
                android:layout_height="56dp" />

            <Button
                android:id="@+id/s_node3"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@color/colorAccent"
                android:visibility="invisible"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="4">

            <com.yuzgulen.laera.ui.exercise.CanvasView
                android:id="@+id/s_edge3"
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <com.yuzgulen.laera.ui.exercise.CanvasView
                android:id="@+id/s_edge4"
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <com.yuzgulen.laera.ui.exercise.CanvasView
                android:id="@+id/s_edge5"
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <com.yuzgulen.laera.ui.exercise.CanvasView
                android:id="@+id/s_edge6"
                android:layout_width="match_parent"
                android:layout_height="20dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/s_node4"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@color/colorAccent"
                android:visibility="invisible"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/s_placeholder2"
                android:visibility="invisible"
                style="@style/Widget.MaterialComponents.Button"
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                android:textSize="20sp"
                android:layout_width="40dp"
                android:layout_height="56dp" />

            <Button
                android:id="@+id/s_node5"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@color/colorAccent"
                android:visibility="invisible"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/s_placeholder3"
                android:visibility="invisible"
                style="@style/Widget.MaterialComponents.Button"
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                android:textSize="20sp"
                android:layout_width="40dp"
                android:layout_height="56dp" />

            <Button
                android:id="@+id/s_node6"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@color/colorAccent"
                android:visibility="invisible"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/s_placeholder4"
                android:visibility="invisible"
                style="@style/Widget.MaterialComponents.Button"
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                android:textSize="20sp"
                android:layout_width="40dp"
                android:layout_height="56dp" />

            <Button
                android:id="@+id/s_node7"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@color/colorAccent"
                android:visibility="invisible"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:text="@string/right_tree_rotation_task" />

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/exerciseLayout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/textButton1"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/dash_border"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.yuzgulen.laera.ui.exercise.CanvasView
                android:id="@+id/edge1"
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <com.yuzgulen.laera.ui.exercise.CanvasView
                android:id="@+id/edge2"
                android:layout_width="match_parent"
                android:layout_height="20dp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/textButton2"
                android:background="@drawable/dash_border"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/placeholder1"
                android:visibility="invisible"
                style="@style/Widget.MaterialComponents.Button"
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                android:textSize="20sp"
                android:layout_width="140dp"
                android:layout_height="56dp" />

            <Button
                android:id="@+id/textButton3"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/dash_border"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="4">

            <com.yuzgulen.laera.ui.exercise.CanvasView
                android:id="@+id/edge3"
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <com.yuzgulen.laera.ui.exercise.CanvasView
                android:id="@+id/edge4"
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <com.yuzgulen.laera.ui.exercise.CanvasView
                android:id="@+id/edge5"
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <com.yuzgulen.laera.ui.exercise.CanvasView
                android:id="@+id/edge6"
                android:layout_width="match_parent"
                android:layout_height="20dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/textButton4"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/dash_border"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/placeholder2"
                android:visibility="invisible"
                style="@style/Widget.MaterialComponents.Button"
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                android:textSize="20sp"
                android:layout_width="40dp"
                android:layout_height="56dp" />

            <Button
                android:id="@+id/textButton5"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/dash_border"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/placeholder3"
                android:visibility="invisible"
                style="@style/Widget.MaterialComponents.Button"
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                android:textSize="20sp"
                android:layout_width="40dp"
                android:layout_height="56dp" />

            <Button
                android:id="@+id/textButton6"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/dash_border"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/placeholder4"
                android:visibility="invisible"
                style="@style/Widget.MaterialComponents.Button"
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                android:textSize="20sp"
                android:layout_width="40dp"
                android:layout_height="56dp" />

            <Button
                android:id="@+id/textButton7"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/dash_border"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/nodes"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center">

            <Button
                android:id="@+id/needed_node1"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@color/colorAccent"
                android:visibility="invisible"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_marginEnd="10dp"/>

            <Button
                android:id="@+id/needed_node2"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@color/colorAccent"
                android:visibility="invisible"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_marginEnd="10dp"/>

            <Button
                android:id="@+id/needed_node3"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@color/colorAccent"
                android:visibility="invisible"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_marginEnd="10dp"/>
            <Button
                android:id="@+id/needed_node4"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@color/colorAccent"
                android:visibility="invisible"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_marginEnd="10dp"/>

            <Button
                android:id="@+id/needed_node5"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@color/colorAccent"
                android:visibility="invisible"
                android:textColor="@android:color/white"
                android:textSize="20sp" />


        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:gravity="center">

            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>