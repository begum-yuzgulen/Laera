                android:visibility="visible" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/delete"
            android:text="Remove item"
            android:layout_weight="1"/>

    </LinearLayout>
</layout>