<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:id="@+id/first_layout"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        >

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textAlignment="viewEnd"
            android:id="@+id/refreshTree"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/ic_renew" />

        <TextView
            android:id="@+id/timer"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/info"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:background="@drawable/ic_info"
            android:textColor="@color/colorPrimary" />


    </RelativeLayout>



    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/startingLayout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/binary_tree"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="18sp" />

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/exerciseLayout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/textButton1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/dash_border"
                android:textSize="18sp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.yuzgulen.laera.ui.exercise.categories.commons.CanvasView
                android:id="@+id/edge1"
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <com.yuzgulen.laera.ui.exercise.categories.commons.CanvasView
                android:id="@+id/edge2"
                android:layout_width="match_parent"
                android:layout_height="20dp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/textButton2"
                android:background="@drawable/dash_border"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textSize="18sp" />

            <Button
                android:id="@+id/placeholder1"
                android:visibility="invisible"
                style="@style/Widget.MaterialComponents.Button"
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                android:textSize="18sp"
                android:layout_width="140dp"
                android:layout_height="54dp" />

            <Button
                android:id="@+id/textButton3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/dash_border"
                android:textSize="18sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="4">

            <com.yuzgulen.laera.ui.exercise.categories.commons.CanvasView
                android:id="@+id/edge3"
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <com.yuzgulen.laera.ui.exercise.categories.commons.CanvasView
                android:id="@+id/edge4"
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <com.yuzgulen.laera.ui.exercise.categories.commons.CanvasView
                android:id="@+id/edge5"
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <com.yuzgulen.laera.ui.exercise.categories.commons.CanvasView
                android:id="@+id/edge6"
                android:layout_width="match_parent"
                android:layout_height="20dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/textButton4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/dash_border"
                android:textSize="18sp" />

            <Button
                android:id="@+id/placeholder2"
                android:visibility="invisible"
                style="@style/Widget.MaterialComponents.Button"
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                android:textSize="18sp"
                android:layout_width="40dp"
                android:layout_height="54dp" />

            <Button
                android:id="@+id/textButton5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/dash_border"
                android:textSize="18sp" />

            <Button
                android:id="@+id/placeholder3"
                android:visibility="invisible"
                style="@style/Widget.MaterialComponents.Button"
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                android:textSize="18sp"
                android:layout_width="40dp"
                android:layout_height="54dp" />

            <Button
                android:id="@+id/textButton6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/dash_border"
                android:textSize="18sp" />

            <Button
                android:id="@+id/placeholder4"
                android:visibility="invisible"
                style="@style/Widget.MaterialComponents.Button"
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                android:textSize="18sp"
                android:layout_width="40dp"
                android:layout_height="54dp" />

            <Button
                android:id="@+id/textButton7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/dash_border"
                android:textSize="18sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/nodes"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center">

            <Button
                android:id="@+id/needed_node1"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:background="@color/colorAccent"
                android:visibility="invisible"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_marginEnd="10dp"/>

            <Button
                android:id="@+id/needed_node2"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:background="@color/colorAccent"
                android:visibility="invisible"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_marginEnd="10dp"/>

            <Button
                android:id="@+id/needed_node3"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:background="@color/colorAccent"
                android:visibility="invisible"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_marginEnd="10dp"/>
            <Button
                android:id="@+id/needed_node4"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:background="@color/colorAccent"
                android:visibility="invisible"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_marginEnd="10dp"/>

            <Button
                android:id="@+id/needed_node5"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:background="@color/colorAccent"
                android:visibility="invisible"
                android:textColor="@android:color/white"
                android:textSize="18sp" />


        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/current_order"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/correct_order"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>
</ScrollView>