<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/first_layout"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/refreshTree"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_renew"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="bla"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="24dp"
        android:id="@+id/traversal"/>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/exerciseLayout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/textButton1"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@color/colorAccent"
            android:visibility="invisible"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <com.yuzgulen.laera.ui.exercise.categories.commons.CanvasView
            android:id="@+id/edge1"
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <com.yuzgulen.laera.ui.exercise.categories.commons.CanvasView
            android:id="@+id/edge2"
            android:layout_width="match_parent"
            android:layout_height="20dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/textButton2"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@color/colorAccent"
            android:visibility="invisible"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/placeholder1"
            android:visibility="invisible"
            style="@style/Widget.MaterialComponents.Button"
            android:textColor="@android:color/white"
            android:background="@color/colorAccent"
            android:textSize="20sp"
            android:layout_width="140dp"
            android:layout_height="56dp" />

        <Button
            android:id="@+id/textButton3"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@color/colorAccent"
            android:visibility="invisible"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="4">

        <com.yuzgulen.laera.ui.exercise.categories.commons.CanvasView
            android:id="@+id/edge3"
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <com.yuzgulen.laera.ui.exercise.categories.commons.CanvasView
            android:id="@+id/edge4"
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <com.yuzgulen.laera.ui.exercise.categories.commons.CanvasView
            android:id="@+id/edge5"
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <com.yuzgulen.laera.ui.exercise.categories.commons.CanvasView
            android:id="@+id/edge6"
            android:layout_width="match_parent"
            android:layout_height="20dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/textButton4"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@color/colorAccent"
            android:visibility="invisible"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/placeholder2"
            android:visibility="invisible"
            style="@style/Widget.MaterialComponents.Button"
            android:textColor="@android:color/white"
            android:background="@color/colorAccent"
            android:textSize="20sp"
            android:layout_width="40dp"
            android:layout_height="56dp" />

        <Button
            android:id="@+id/textButton5"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@color/colorAccent"
            android:visibility="invisible"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/placeholder3"
            android:visibility="invisible"
            style="@style/Widget.MaterialComponents.Button"
            android:textColor="@android:color/white"
            android:background="@color/colorAccent"
            android:textSize="20sp"
            android:layout_width="40dp"
            android:layout_height="56dp" />

        <Button
            android:id="@+id/textButton6"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@color/colorAccent"
            android:visibility="invisible"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/placeholder4"
            android:visibility="invisible"
            style="@style/Widget.MaterialComponents.Button"
            android:textColor="@android:color/white"
            android:background="@color/colorAccent"
            android:textSize="20sp"
            android:layout_width="40dp"
            android:layout_height="56dp" />

        <Button
            android:id="@+id/textButton7"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@color/colorAccent"
            android:visibility="invisible"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/order"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center">

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inOrder"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center">

        <Button
            android:theme="@style/Widget.MaterialComponents.Button"
            android:textColor="@color/white"
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"/>

    </LinearLayout>
    </LinearLayout>
</LinearLayout>